<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleMVVMSimple" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color232015</item>
        <item name="colorPrimaryVariant">@color/color232015</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color232015</item>
        <item name="colorSecondaryVariant">@color/color232015</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color232015</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="blackRegular12">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

     <style name="blackRegular14">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

     <style name="blackRegular10">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="blackBold16">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="blackBold11">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Theme.SimpleMVVMSimple.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.SimpleMVVMSimple.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SimpleMVVMSimple.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
